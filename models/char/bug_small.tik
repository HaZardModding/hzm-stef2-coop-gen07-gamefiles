	}
}

attack1	attack1.ska
{
server
	{
	3 melee 5 "origin" "alien_melee" "60 128 96" 0
	}
client
	{
	0 sound snd_attack 1 1.3 100 .9 1.3
	}
}

attack2	attack2.ska
{
server
	{
	2 melee 5 "origin" "alien_melee" "60 128 96" 0
	}
client
