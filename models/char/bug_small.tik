		)

	entry originspawn
		(
		model yellowdrop.spr
		offset crandom 8 crandom 8 10
		randvel 0 0 -700
		color 0.1 1.0 0.25
		life 0.4
		scale 0.01
		collision
		orientation random
		bouncedecal 1 0
		decalshader bugblood-splat1
		decalradius 30
		fade
		)
	}
}

