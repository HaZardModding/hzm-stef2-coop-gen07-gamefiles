TIKI
//Co-Op Optimized for Multiplayer 2009.1.21
setup
{
	scale 1.25
	fade_dist_mod 250
	lod 200 1.0 6000 .2 6144
	radius 20

	path models/char/m5-drull/bug-small
	skelmodel small-bug-base.skb

	surface material1 shader bug-small
	surface material2 shader small-head.tga
//deleted for co-op, mp has issues with loading to many animations
//loadAllAnims
}

init
{
server
	{
	classname Actor
	name "BugSmall"
	archetype "BugSmall"
	setsize "-20 -20 0" "20 20 40"
	health 10
	painthreshold 5
	fov 360
	actortype "enemy"
	deathsink
	//surface material3 +nodraw
	resistance sting 0
	resistance alien_melee 100
	contents shootable
	allowfall

	statemap ai/BugNrm/P_BugNrm.st
	painthreshold 5
	name "SmallBug"
	}
client
	{
	aliascache snd_attack1 sound/chars/bugsmall/bug_attack1.wav
	aliascache snd_attack2 sound/chars/bugsmall/bug_attack2.wav
	aliascache snd_attack3 sound/chars/bugsmall/bug_attack3.wav
	aliascache snd_death1 sound/chars/bugsmall/bug_death1.wav
	aliascache snd_death2 sound/chars/bugsmall/bug_death2.wav
	cache sound/chars/lurker/lurk_gib1.wav
	cache sound/chars/bugsmall/bug_runloop.wav
	cache models/fx/fx-bugblood-green1.tik
	cache models/fx/fx-bugblood-green2.tik
	cache models/fx/fx-gib-bug-small-01.tik

	}
}

animations
{
walk	walk.ska
{
client
	{
	0 loopsound sound/chars/bugsmall/bug_runloop.wav 1.3 100
	}
}

walk2	walk2.ska
{
client
	{
	0 loopsound sound/chars/bugsmall/bug_runloop.wav 1.3 100
	}
}

