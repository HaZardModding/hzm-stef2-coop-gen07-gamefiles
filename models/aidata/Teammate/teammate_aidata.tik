		// Setup Actor
		//-------------------------------------------------------------
		classname Actor
		setsize "-12 -12 0" "12 12 80"
		watchoffset "0 0 90"
		actortype "teammate"	
		mass 200
		deathEffect TransportOut-FederationNoAnim
		pushable	
		combattraceinterval 0.0
		groupnumber -1
		max_inactive_time -1
