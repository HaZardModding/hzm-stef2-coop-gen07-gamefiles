		settendency "getoutoftheway"		1.0
		settendency "handlecallvolume"		1.0
		settendency "changepositions"		1.0
		settendency "seekenemyfromposition"	1.0
		settendency "spar"					0.0

		//Default Weapons
		giveactorweapon "actorweapons/fed-tricorder-STX.tik"
		giveactorweapon "actorweapons/fed-fieldassaultrifle.tik"
		giveactorweapon "actorweapons/fed-compressionrifle-enhanced.tik"
		giveactorweapon "actorweapons/fed-compressionrifle.tik"
		useactorweapon "actorweapons/fed-compressionrifle.tik"

